OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# If using LiteLLM Proxy (recommended for unified OpenAI/Claude/local models), set:
# Example: http://localhost:4000
LITELLM_BASE_URL=
# Optional (if your proxy uses a key):
LITELLM_API_KEY=

# Default model name/alias used by the generators
# Example: gpt-5.2, claude-3-5-sonnet, or a LiteLLM model alias
DND_DEFAULT_MODEL=gpt-5.2

# Optional: ComfyUI (Stable Diffusion) sidecar integration
# If set, campaign pack generation can auto-generate a small number of images.
# Example: http://localhost:8188
COMFYUI_BASE_URL=

# Required for ComfyUI generation: checkpoint file name as ComfyUI sees it (in its models/checkpoints folder)
# Example: fantasyMix_v20.safetensors
COMFYUI_CHECKPOINT=

# Optional tuning (keep small for ~8GB GPUs)
COMFYUI_WIDTH=768
COMFYUI_HEIGHT=768
COMFYUI_STEPS=8
COMFYUI_CFG=4.0
COMFYUI_MAX_IMAGES=2
COMFYUI_MODE=location
